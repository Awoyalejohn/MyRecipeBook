<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Recipe Book</title>

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/material-symbols/index.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">My Recipe Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-area="" asp-controller="Bookmark" asp-action="Index">Bookmarks</a>
                        </li>

                    }
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>

        
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    @if (ViewContext.View.Path == "/Views/Home/Index.cshtml")
    {
        <partial name="_Hero" />
    }
    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <!-- Footer Copyright -->
    <footer class="py-4 bg-dark text-white mt-auto">
        <div class="container text-center">
            <small>Copyright &copy; 2023 My Recipe Book - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)

</body>

</html>